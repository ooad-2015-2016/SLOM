        	<Run Text="Težina:"/>
        	<LineBreak/>
        	<Run/>
        </TextBlock>
        <TextBox x:Name="tVisina" HorizontalAlignment="Left" Height="35" Margin="743.382,254,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="443" Grid.Column="1"/>
        <TextBox x:Name="tTezina" HorizontalAlignment="Left" Height="35" Margin="743.382,315,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="443" Grid.Column="1"/>

    </Grid>
</Page>
