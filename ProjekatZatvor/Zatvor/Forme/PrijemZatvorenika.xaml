    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Margin="20.383,40.935,3.063,34.051" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto">
