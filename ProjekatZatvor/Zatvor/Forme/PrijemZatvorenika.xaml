            </TextBox.Foreground>
        </TextBox>
        <DatePicker x:Name="dDatumRodjenja" HorizontalAlignment="Left" Height="35" Margin="166.082,231,0,0" VerticalAlignment="Top" Width="296" Grid.Column="1"/>
