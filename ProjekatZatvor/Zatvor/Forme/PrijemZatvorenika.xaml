        <Button x:Name="button1" Content="Dodaj krivično djelo" HorizontalAlignment="Left" Height="37" Margin="876.082,388,0,0" VerticalAlignment="Top" Width="176" Grid.Column="1"/>
        <TextBlock x:Name="textBlock_Copy8" HorizontalAlignment="Left" Height="35" TextWrapping="Wrap" VerticalAlignment="Top" Width="57" Margin="659.082,254,0,0" RenderTransformOrigin="0.566,-0.857" Text="Visina:" Grid.Column="1"/>
